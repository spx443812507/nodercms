<section class="banner_area">
    <div class="container">
        <div class="row banner_inner">
            <div class="col-lg-5"></div>
            <div class="col-lg-7">
                <div class="banner_content text-center">
                    <h2>{{title}}</h2>
                    <div class="page_link">
                        <a href="index.html">首页</a>
                        <a>详情</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="blog_area p_120 single-post-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="main_blog_details">
                    <img class="img-fluid" src="img/blog/news-blog.jpg" alt="">
                    <a href="#"><h4>{{title}}</h4></a>
                    <div class="user_details">
                        <div class="float-left">
                            {{#if tags}}
                                {{#foreach tags}}
                                    <a>{{this}}</a>
                                {{/foreach}}
                            {{/if}}
                        </div>
                        <div class="float-right">
                            <div class="media">
                                <div class="media-body">
                                    <h5>小静桑</h5>
                                    <p>{{dateformat date format="YYYY年MM月DD日 HH:mm"}}</p>
                                </div>
                                <div class="d-flex">
                                    <img src="/themes/opium/img/blog/user-img.jpg" alt="" width="50" height="50px">
                                </div>
                            </div>
                        </div>
                    </div>
                    {{{content}}}
                </div>
            </div>
            <div class="col-lg-4">
                {{> right-side-bar}}
            </div>
        </div>
    </div>
</section>
