<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        {{#foreach readingList.total limit="5"}}
            <div class="row">
                <div class="col-md-7">
                    <a href="{{href}}">
                        {{#if thumbnail}}
                            <img src="{{thumbnail.src}}" title="{{thumbnail.fileName}}"
                                 alt="{{thumbnail.description}}" class="img-fluid rounded mb-3 mb-md-0">
                        {{/if}}
                    </a>
                </div>
                <div class="col-md-5">
                    <h3>{{title}}</h3>
                    <p>{{abstract}}</p>
                    <a class="btn btn-primary" href="{{href}}">阅读更多</a>
                </div>
            </div>
            <hr>
        {{/foreach}}
        <div class="clearfix">
            <a class="btn btn-primary float-right" href="/travel">更多旅程 &rarr;</a>
        </div>
    </div>
</div>
